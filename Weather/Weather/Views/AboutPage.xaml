<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.Views.AboutPage"
             Title="About Weather">
    <AbsoluteLayout>
        <Image AbsoluteLayout.LayoutBounds="0,0,915,1050" x:Name="sunnyGif" Source="sunnyGif" 
                  ></Image>
        <StackLayout>
        
        <Frame BackgroundColor="#21F38D" Padding="24" CornerRadius="0">
            <Label Text="Project Part B - Weather Forecast" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Weather Forecast" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="This is an excellent weather application." TextColor="White"
               FontSize="16" Padding="30,0,30,0"/>
        <Label Text="Select a city and give it a try!" FontSize="16" Padding="30,0,30,0"/>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Created by Sophie Lindström"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        
    </StackLayout>
    </AbsoluteLayout>

</ContentPage>
